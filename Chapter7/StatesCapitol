import java.util.Scanner;
public class StatesCapitals {
   public static void main(String[] args){
    Scanner scanner =new Scanner(System.in);
    String[][]StatesAndCapitals ={
        {"Angola","Luanda"},
        {"Burkina-Faso","Ouagadougou"},
        {"Congo-Kin","Kinshasa"},
        {"Nigeria","Abuja"},
        {"Senegal","Dakar"},
        {"Mali","Bamako"},
        {"Kenya","Nairobi"},
        {"Ghana" , "Accra"},
        {"Zambia" , "Lusaka"},
        {"Cameroun","Yaounde"},
    };
    int reponce = 0;
    // on pose les questions
    for(int i = 0; i < StatesAndCapitals.length; i++){
        System.out.println("Quelle est la capitale de "+ StatesAndCapitals[i][0] +"?");
        String answer= scanner.nextLine();
        // on va comparer
        if(answer.equalsIgnoreCase(StatesAndCapitals[i][1])){
            System.out.println("Correct!");
            reponce++;
        }
        else{
            System.out.println("Incorrect! La bonne reponce est "+StatesAndCapitals[i][1]);
        }
    } 
           //on va afficher les resultats
            System.out.println("\nVotre score :" + reponce + "/" + StatesAndCapitals.length);
           scanner.close();
        
    
    

    }
   } 

