 import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
public class StatesCapitals {
   public static void main(String[] args){
    Scanner scanner =new Scanner(System.in);
    String[][]StatesAndCapitals ={
        {"Angola","Luanda"},
        {"BUrkina-Faso","Ouagadougou"},
        {"Congo-Kin","Kinshasa"},
        {"Nigeria","Abuja"},
        {"Senegal","Dakar"},
        {"Mali","Bamako"},
        {"Kenya","Nairobi"},
        {"Ghana" , "Accra"},
        {"Zambia" , "Lusaka"},
        {"Cameroun","Yaounde"},
        {"Namibi","Windhoek"},
        {"Erythree","Maseru"},
        {"Madagascar","Antananarivo"},
    };
    int reponce = 0;
    int incorrect=0;
    List<String> wrongAnswers = new ArrayList<>();
    // on pose les questions
    for(int i = 0; i < StatesAndCapitals.length; i++){
        System.out.println("Quelle est la capitale de "+ StatesAndCapitals[i][0] +"?");
        String answer= scanner.nextLine();
        // on va comparer
        if(answer.equalsIgnoreCase(StatesAndCapitals[i][1])){
            System.out.println("Correct!");
            reponce++;
        }
        else{
            System.out.println("Incorrect! La bonne reponce est "+StatesAndCapitals[i][1]);
        wrongAnswers.add(StatesAndCapitals[i][0] + " -> " + StatesAndCapitals[i][1]);
        incorrect++;
        }
    }
            // RÃ©sultat final
                System.out.println("\nVotre score : " + reponce + " / " + StatesAndCapitals.length);
                System.out.print("\nincorrect answers :" + incorrect + " / " + StatesAndCapitals.length);
                if(!wrongAnswer.isEmpty()){
                    System.out.print("\nReponces correctes aux questions mal repondues:");
                    for(String wrong : wrongAnswers){
                        System.out.print(wrong);
                    }
                }
            scanner.close();
    }
   } 
